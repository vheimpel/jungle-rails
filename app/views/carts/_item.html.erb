<% quantity = details['quantity'].to_i %>

<% if product = Product.find_by(id: product_id) %>
  <% item_total = product.price * product.quantity %>
  <% @cart_total += item_total %>

  <tr>
    <td>
      <%= image_tag product.image.tiny %>
    </td>
    <td>
      <h4><%= product.name %></h4>
      <br>
      <p><%= product.description %></p>
    </td>
    <td>
      <%= product.price %>
    </td>
    <td>
      <%= product.quantity %>
    </td>
    <td>
      <%= item_total %>
    </td>
    <td>
      <%= link_to fa_icon('trash'), [:cart], class: 'btn btn-sm btn-danger', method: :remove_item, data: { confirm: "Are you sure?" } %>
    </td>
  </tr>
<% end %>
