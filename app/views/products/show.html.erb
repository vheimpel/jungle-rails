<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
          <!-- <dt>Reviews</dt> -->
          <dd><% @product.ratings.reverse_each do |rating| %>
                    Rating: <%= rating.rating %>/10 <br>
                    <%= rating.description %><br>
                    <%= rating.user.name.titlecase %><br>
                    <%= rating.created_at.to_date.iso8601 %><p>
                 <% end %>
          <%= render "ratings" %>
          </dd>
        </dl>
      </div>
    </div>

  </article>

</section>
